<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tvTitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="활동도"
        android:textSize="16dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnActivity"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@id/tvTitle2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <com.mikhaellopez.circularprogressbar.CircularProgressBar
                android:id="@+id/circularProgress"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="15dp"
                app:cpb_background_progressbar_color="#F4F4F4"
                app:cpb_background_progressbar_width="6dp"
                app:cpb_progress_direction="to_right"
                app:cpb_progressbar_color="#5558FF"
                app:cpb_progressbar_width="6dp"
                app:cpb_round_border="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/progressLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0%"
                android:textSize="16sp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                android:textColor="#CCCCCC"
                app:layout_constraintStart_toStartOf="@id/circularProgress"
                app:layout_constraintEnd_toEndOf="@id/circularProgress"
                app:layout_constraintBottom_toBottomOf="@id/circularProgress"
                app:layout_constraintTop_toTopOf="@id/circularProgress"/>
            <TextView
                android:id="@+id/tvStatus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:text="매우 활동적"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="@id/circularProgress"
                app:layout_constraintBottom_toTopOf="@id/tvStatus2"
                app:layout_constraintStart_toEndOf="@id/circularProgress"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:id="@+id/tvStatus2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="보통 활동적"
                android:textSize="13sp"
                android:textColor="#DDDDDD"
                app:layout_constraintTop_toBottomOf="@id/tvStatus1"
                app:layout_constraintStart_toStartOf="@id/tvStatus1"
                app:layout_constraintBottom_toBottomOf="@id/tvStatus3"/>
            <TextView
                android:id="@+id/tvStatus3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="약간 활동적"
                android:textColor="#DDDDDD"
                android:textSize="13sp"
                app:layout_constraintTop_toBottomOf="@id/tvStatus2"
                app:layout_constraintStart_toStartOf="@id/tvStatus1"
                app:layout_constraintBottom_toBottomOf="@id/circularProgress"/>
            <TextView
                android:id="@+id/tvAbsent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="부재중"
                android:textColor="#DDDDDD"
                android:textSize="15sp"
                app:layout_constraintTop_toTopOf="@id/circularProgress"
                app:layout_constraintBottom_toBottomOf="@id/circularProgress"
                app:layout_constraintStart_toEndOf="@id/circularProgress"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>