<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2B4E">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbarContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageButton
                android:id="@+id/btnBk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/arrow_back"
                app:tint="@android:color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="생활 패턴"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/btnBk"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <FrameLayout
            android:id="@+id/btnBell"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginRight="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
            <ImageView
                android:id="@+id/ivBell"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bell"
                app:tint="@android:color/white" />
            <View
                android:id="@+id/badgeDot"
                android:layout_width="4.8dp"
                android:layout_height="4.8dp"
                android:visibility="gone"
                android:layout_gravity="end|top"
                android:layout_marginEnd="6.5dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/oval"
                android:backgroundTint="@android:color/holo_red_light"/>
        </FrameLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tvSelectedDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2025-08-24"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/toolbarContainer"
        app:layout_constraintStart_toStartOf="parent"/>
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/tvSelectedDate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/groupContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTotalActive"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="20dp"
                app:cardBackgroundColor="#5A185078"
                app:strokeColor="#185078"
                app:strokeWidth="1.4dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardTotalInactive">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">
                    <TextView
                        android:id="@+id/lblTotalActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 활동 시간"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tvTotalActive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0분"
                        android:textColor="#E6FF6B6B"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="@id/lblTotalActive"
                        app:layout_constraintTop_toBottomOf="@id/lblTotalActive"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTotalInactive"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#5A185078"
                app:strokeColor="#185078"
                app:strokeWidth="1.4dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toTopOf="@id/cardTotalActive"
                app:layout_constraintStart_toEndOf="@id/cardTotalActive"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">
                    <TextView
                        android:id="@+id/lblTotalInactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="총 비활동 시간"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tvTotalInactive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0분"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="@id/lblTotalInactive"
                        app:layout_constraintTop_toBottomOf="@id/lblTotalInactive"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAvgScore"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#5A185078"
                app:strokeColor="#185078"
                app:strokeWidth="1.4dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/cardTotalActive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cardMaxScore">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">
                    <TextView
                        android:id="@+id/lblAvgScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="평균 점수"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tvAvgScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0점"
                        android:textColor="#E6FF6B6B"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="@id/lblAvgScore"
                        app:layout_constraintTop_toBottomOf="@id/lblAvgScore"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMaxScore"
                android:layout_width="0dp"
                android:layout_height="92dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#5A185078"
                app:strokeColor="#185078"
                app:strokeWidth="1.4dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toTopOf="@id/cardAvgScore"
                app:layout_constraintStart_toEndOf="@id/cardAvgScore"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp">
                    <TextView
                        android:id="@+id/lblMaxScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="최고 점수"
                        android:textColor="@android:color/white"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tvMaxScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0점"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:layout_marginTop="6dp"
                        app:layout_constraintStart_toStartOf="@id/lblMaxScore"
                        app:layout_constraintTop_toBottomOf="@id/lblMaxScore"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="생활 패턴 세부 정보"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:layout_constraintTop_toBottomOf="@id/cardAvgScore"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardDetails"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                app:cardBackgroundColor="#5A185078"
                app:strokeColor="#185078"
                app:strokeWidth="1.4dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvSectionTitle"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp">
                    <TextView
                        android:id="@+id/lblFirstActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="첫 활동"
                        android:textColor="#BFFFFFFF"
                        android:textSize="13sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <TextView
                        android:id="@+id/tvFirstActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정보 없음"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@id/lblFirstActivity"
                        app:layout_constraintTop_toBottomOf="@id/lblFirstActivity"/>
                    <TextView
                        android:id="@+id/lblLastActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="마지막 활동"
                        android:textColor="#BFFFFFFF"
                        android:textSize="13sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/lblFirstActivity"/>
                    <TextView
                        android:id="@+id/tvLastActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정보 없음"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="@id/lblLastActivity"
                        app:layout_constraintTop_toBottomOf="@id/lblLastActivity"/>
                    <TextView
                        android:id="@+id/lblSleepMinutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수면"
                        android:textColor="#BFFFFFFF"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvFirstActivity"/>
                    <TextView
                        android:id="@+id/tvSleepMinutes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0분"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@id/lblSleepMinutes"
                        app:layout_constraintTop_toBottomOf="@id/lblSleepMinutes"/>
                    <TextView
                        android:id="@+id/lblSleepRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수면 시간"
                        android:textColor="#BFFFFFFF"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvLastActivity"/>
                    <TextView
                        android:id="@+id/tvSleepRange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="정보 없음"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="@id/lblSleepRange"
                        app:layout_constraintTop_toBottomOf="@id/lblSleepRange"/>
                    <TextView
                        android:id="@+id/lblMostActiveHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="활동적 시간"
                        android:textColor="#BFFFFFFF"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSleepMinutes"/>
                    <TextView
                        android:id="@+id/tvMostActiveHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0시"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@id/lblMostActiveHour"
                        app:layout_constraintTop_toBottomOf="@id/lblMostActiveHour"/>
                    <TextView
                        android:id="@+id/lblLeastActiveHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="비활동적 시간"
                        android:textColor="#BFFFFFFF"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvSleepRange"/>
                    <TextView
                        android:id="@+id/tvLeastActiveHour"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0시"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="@id/lblLeastActiveHour"
                        app:layout_constraintTop_toBottomOf="@id/lblLeastActiveHour"/>
                    <TextView
                        android:id="@+id/lblPatternType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="패턴 유형"
                        android:textColor="#BFFFFFFF"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvMostActiveHour"/>
                    <TextView
                        android:id="@+id/tvPatternType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="알 수 없음"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintStart_toStartOf="@id/lblPatternType"
                        app:layout_constraintTop_toBottomOf="@id/lblPatternType"/>
                    <TextView
                        android:id="@+id/lblRegularityScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="규칙성 점수"
                        android:textColor="#BFFFFFFF"
                        android:textSize="13sp"
                        android:layout_marginTop="12dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvLeastActiveHour"/>
                    <TextView
                        android:id="@+id/tvRegularityScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0점"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:layout_marginTop="4dp"
                        app:layout_constraintEnd_toEndOf="@id/lblRegularityScore"
                        app:layout_constraintTop_toBottomOf="@id/lblRegularityScore"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <View
                android:id="@+id/contentBottomSpacer"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:layout_constraintTop_toBottomOf="@id/cardDetails"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>