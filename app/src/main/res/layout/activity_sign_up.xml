<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2B4E">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@android:color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="회원가입"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="이름"
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rec_5"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="이름"
                android:inputType="text"
                android:textColorHint="#DDDDDD"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="17dp"
                android:text="이메일"
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/etName"
                app:layout_constraintStart_toStartOf="parent"/>
            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rec_5"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="이메일"
                android:inputType="text"
                android:textColorHint="#DDDDDD"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/tvEmail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="20dp"
                android:text="비밀번호"
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etEmail"/>
            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rec_5"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="8자이상 입력해 주세요."
                android:inputType="textPassword"
                android:textColorHint="#DDDDDD"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/tvPassword"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvConfirmPw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="20dp"
                android:text="비밀번호 확인"
                android:textSize="14dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etPassword"/>
            <EditText
                android:id="@+id/etConfirmPw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/rec_5"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:hint="다시 한번 입력해 주세요."
                android:inputType="textPassword"
                android:textColorHint="#DDDDDD"
                android:textColor="@android:color/black"
                android:textSize="14dp"
                android:fontFamily="@font/noto_sans_kr_regular"
                android:includeFontPadding="false"
                app:layout_constraintTop_toBottomOf="@id/tvConfirmPw"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                app:layout_constraintTop_toBottomOf="@id/etConfirmPw"
                app:layout_constraintStart_toStartOf="parent">
                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="약관 동의"
                    android:textColor="@android:color/white"
                    android:textSize="14dp"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/checkAll"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:checked="false"
                    android:drawablePadding="8dp"
                    android:text="모두 선택"
                    android:textSize="14dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle2"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/check1"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:drawablePadding="8dp"
                    android:checked="false"
                    android:text="이용약관"
                    android:textSize="14dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/checkAll"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="(필수)"
                    android:textSize="11dp"
                    android:textColor="#FF0000"
                    app:layout_constraintTop_toTopOf="@id/check1"
                    app:layout_constraintBottom_toBottomOf="@id/check1"
                    app:layout_constraintStart_toEndOf="@id/check1"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnTerms1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/check1"
                    app:layout_constraintBottom_toBottomOf="@id/check1"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="17dp"
                        android:src="@drawable/ic_right"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@android:color/white" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/check2"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:drawablePadding="8dp"
                    android:checked="false"
                    android:text="개인정보 수집 및 이용 동의"
                    android:textSize="14dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/check1"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="(필수)"
                    android:textSize="11dp"
                    android:textColor="#FF0000"
                    app:layout_constraintTop_toTopOf="@id/check2"
                    app:layout_constraintBottom_toBottomOf="@id/check2"
                    app:layout_constraintStart_toEndOf="@id/check2"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnTerms2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/check2"
                    app:layout_constraintBottom_toBottomOf="@id/check2"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_right"
                        android:layout_marginRight="17dp"
                        android:layout_marginLeft="50dp"
                        app:tint="@android:color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/check3"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginTop="5dp"
                    android:button="@null"
                    android:drawableStart="@drawable/custom_checkbox"
                    android:drawablePadding="8dp"
                    android:checked="false"
                    android:text="개인정보처리방침"
                    android:textSize="14dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    app:layout_constraintTop_toBottomOf="@id/check2"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="(필수)"
                    android:textSize="11dp"
                    android:textColor="#FF0000"
                    app:layout_constraintTop_toTopOf="@id/check3"
                    app:layout_constraintBottom_toBottomOf="@id/check3"
                    app:layout_constraintStart_toEndOf="@id/check3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnTerms3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="@id/check3"
                    app:layout_constraintBottom_toBottomOf="@id/check3"
                    app:layout_constraintEnd_toEndOf="parent">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_right"
                        android:layout_marginRight="17dp"
                        android:layout_marginLeft="50dp"
                        app:tint="@android:color/white"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:cardBackgroundColor="#1A4E8C"
                app:cardElevation="0dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/container">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="회원가입"
                    android:textSize="15dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:includeFontPadding="false"/>
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btnRegister">
                <TextView
                    android:id="@+id/tvLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="로그인"
                    android:textSize="13dp"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/noto_sans_kr_regular"
                    android:includeFontPadding="false"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
                <View
                    android:id="@+id/underline"
                    android:layout_width="40dp"
                    android:layout_height="0.8dp"
                    android:background="@android:color/white"
                    app:layout_constraintTop_toBottomOf="@id/tvLogin"
                    app:layout_constraintStart_toStartOf="@id/tvLogin"
                    app:layout_constraintEnd_toEndOf="@id/tvLogin"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>