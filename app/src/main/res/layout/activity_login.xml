<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2B4E">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="로그인"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rec_5"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="이메일"
        android:inputType="text"
        android:textColorHint="#DDDDDD"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="10dp"
        android:drawableTint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/etPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/rec_5"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColorHint="#DDDDDD"
        android:textColor="@android:color/black"
        android:textSize="15dp"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="10dp"
        android:drawableTint="@android:color/black"
        app:layout_constraintBottom_toTopOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="#1A4E8C"
        app:cardElevation="0dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnFindPass">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="로그인"
            android:textSize="14dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"/>
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/btnSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="60dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="6dp"
        android:text="회원가입"
        android:textSize="13dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnGoogle"
        app:layout_constraintEnd_toStartOf="@id/bar"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
        android:id="@+id/bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="/"
        android:textSize="13dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/btnSignIn"
        app:layout_constraintTop_toTopOf="@id/btnSignIn"
        app:layout_constraintEnd_toStartOf="@id/btnFindPass"
        app:layout_constraintBottom_toBottomOf="@id/btnSignIn"/>
    <TextView
        android:id="@+id/btnFindPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="6dp"
        android:text="비밀번호 찾기"
        android:textSize="13dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        app:layout_constraintStart_toEndOf="@id/bar"
        app:layout_constraintTop_toTopOf="@id/btnSignIn"
        app:layout_constraintBottom_toBottomOf="@id/btnSignIn"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnGoogle"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginBottom="60dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnKakao"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logo_google"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnKakao"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:visibility="gone"
        android:layout_marginLeft="14dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="@id/btnGoogle"
        app:layout_constraintBottom_toBottomOf="@id/btnGoogle"
        app:layout_constraintStart_toEndOf="@id/btnGoogle"
        app:layout_constraintEnd_toStartOf="@id/btnNaver">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/logo_kakao"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnNaver"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:visibility="gone"
        android:layout_marginLeft="14dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="9dp"
        app:cardElevation="0dp"
        app:layout_constraintTop_toTopOf="@id/btnKakao"
        app:layout_constraintBottom_toBottomOf="@id/btnKakao"
        app:layout_constraintStart_toEndOf="@id/btnKakao"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/logo_naver"
            android:layout_gravity="center"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>