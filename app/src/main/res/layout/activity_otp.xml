<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F2B4E">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:tint="@android:color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="OPT 코드 입력"
        android:textSize="16dp"
        android:textColor="@android:color/white"
        android:fontFamily="@font/noto_sans_kr_bold"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="이메일 수신함에서 발송된 OTP 코드를 확인하고 아래에 OTP 코드를 입력하세요."
        android:textAlignment="textStart"
        android:textSize="13dp"
        android:textColor="#AAAAAA"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/otp1"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="22sp"
        android:background="@drawable/otp_box"
        android:imeOptions="actionNext"
        app:layout_constraintTop_toBottomOf="@id/msg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/otp2"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <EditText
        android:id="@+id/otp2"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="22sp"
        android:background="@drawable/otp_box"
        android:imeOptions="actionNext"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/otp1"
        app:layout_constraintTop_toTopOf="@id/otp1"
        app:layout_constraintBottom_toBottomOf="@id/otp1"
        app:layout_constraintEnd_toStartOf="@id/otp3"/>
    <EditText
        android:id="@+id/otp3"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:layout_marginStart="7dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="22sp"
        android:background="@drawable/otp_box"
        android:imeOptions="actionNext"
        app:layout_constraintStart_toEndOf="@id/otp2"
        app:layout_constraintTop_toTopOf="@id/otp1"
        app:layout_constraintBottom_toBottomOf="@id/otp1"
        app:layout_constraintEnd_toStartOf="@id/otp4"/>
    <EditText
        android:id="@+id/otp4"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="22sp"
        android:background="@drawable/otp_box"
        android:imeOptions="actionDone"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/otp3"
        app:layout_constraintTop_toTopOf="@id/otp1"
        app:layout_constraintBottom_toBottomOf="@id/otp1"
        app:layout_constraintEnd_toStartOf="@id/otp5"/>
    <EditText
        android:id="@+id/otp5"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="22sp"
        android:background="@drawable/otp_box"
        android:imeOptions="actionDone"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/otp4"
        app:layout_constraintTop_toTopOf="@id/otp1"
        app:layout_constraintBottom_toBottomOf="@id/otp1"
        app:layout_constraintEnd_toStartOf="@id/otp6"/>
    <EditText
        android:id="@+id/otp6"
        android:layout_width="45dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:inputType="number"
        android:maxLength="1"
        android:textSize="22sp"
        android:background="@drawable/otp_box"
        android:imeOptions="actionDone"
        android:layout_marginStart="7dp"
        app:layout_constraintStart_toEndOf="@id/otp5"
        app:layout_constraintTop_toTopOf="@id/otp1"
        app:layout_constraintBottom_toBottomOf="@id/otp1"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:indeterminate="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.cardview.widget.CardView
        android:id="@+id/btnConfirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#184378"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="1dp"
            android:text="확인"
            android:textSize="15dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"/>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>