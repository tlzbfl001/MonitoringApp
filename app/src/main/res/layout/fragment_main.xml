<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보호자"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대상자 관리"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/tvSetting"
        app:layout_constraintBottom_toBottomOf="@id/tvSetting"
        app:layout_constraintEnd_toStartOf="@id/tvSetting"/>
    <TextView
        android:id="@+id/tvNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 (0)"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/tvSetting"
        app:layout_constraintBottom_toBottomOf="@id/tvSetting"
        app:layout_constraintEnd_toStartOf="@id/tvManage"/>
</androidx.constraintlayout.widget.ConstraintLayout>
