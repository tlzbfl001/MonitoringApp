<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="15dp">
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="보호자"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/tvSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="설정"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/tvManage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="대상자 관리"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/tvSetting"
        app:layout_constraintBottom_toBottomOf="@id/tvSetting"
        app:layout_constraintEnd_toStartOf="@id/tvSetting"/>
    <TextView
        android:id="@+id/tvNotification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알림 (0)"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toTopOf="@id/tvSetting"
        app:layout_constraintBottom_toBottomOf="@id/tvSetting"
        app:layout_constraintEnd_toStartOf="@id/tvManage"/>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/btnToggleInRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="재실/부재중 (TEST)"
                android:textColor="@android:color/holo_purple"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/tvSubjectCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="등록된 대상자: 0"
                android:textSize="13dp"
                android:textColor="@android:color/black"
                app:layout_constraintTop_toBottomOf="@id/btnToggleInRoom"
                app:layout_constraintStart_toStartOf="parent"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/btnAddSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="3dp"
                app:cardBackgroundColor="#CCCCCC"
                app:layout_constraintTop_toBottomOf="@id/tvSubjectCount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="보호 대상자 등록하기"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@android:color/holo_purple"
                    android:textSize="16dp"/>
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/roomLocationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/btnAddSubject"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/tvTitle1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="재실/부재중"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tvPresent"
                    android:layout_width="0dp"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:text="재실"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvAbsent"/>
                <TextView
                    android:id="@+id/tvAbsent"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="38dp"
                    android:gravity="center"
                    android:text="부재중"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/tvPresent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvPresent"
                    app:layout_constraintBottom_toBottomOf="@id/tvPresent"/>
                <TextView
                    android:id="@+id/tvEmpty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:text="등록된 기기가 없습니다"
                    android:textColor="#CCCCCC"
                    app:layout_constraintTop_toBottomOf="@id/tvPresent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvPresent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/absentView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/tvPresent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="외출시간"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/space2"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <Space
                        android:id="@+id/space2"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toEndOf="@id/tv1"
                        app:layout_constraintTop_toTopOf="@id/tv1"
                        app:layout_constraintBottom_toBottomOf="@id/tv1"
                        app:layout_constraintEnd_toStartOf="@id/tvAbsentTime"/>
                    <TextView
                        android:id="@+id/tvAbsentTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="2시간 10분"
                        android:gravity="center"
                        app:layout_constraintStart_toEndOf="@id/space2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tv1"
                        app:layout_constraintBottom_toBottomOf="@id/tv1"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/activityView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@id/roomLocationView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <TextView
                    android:id="@+id/tvTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="활동도"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.mikhaellopez.circularprogressbar.CircularProgressBar
                    android:id="@+id/circularProgress"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    app:cpb_progress="0"
                    app:cpb_progress_max="100"
                    app:cpb_round_border="true"
                    app:cpb_start_angle="0"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle2"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/progressLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/circularProgress"
                    app:layout_constraintEnd_toEndOf="@id/circularProgress"
                    app:layout_constraintBottom_toBottomOf="@id/circularProgress"
                    app:layout_constraintTop_toTopOf="@id/circularProgress"/>
                <TextView
                    android:id="@+id/tvActiveSt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="매우 활동적"
                    android:textSize="13sp"
                    app:layout_constraintTop_toTopOf="@id/circularProgress"
                    app:layout_constraintBottom_toBottomOf="@id/circularProgress"
                    app:layout_constraintStart_toEndOf="@id/circularProgress"/>
                <TextView
                    android:id="@+id/tvActiveSt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="보통 활동적"
                    android:textSize="13sp"
                    app:layout_constraintTop_toTopOf="@id/tvActiveSt1"
                    app:layout_constraintStart_toEndOf="@id/tvActiveSt1"/>
                <TextView
                    android:id="@+id/tvActiveSt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="약간 활동적"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@id/tvActiveSt2"
                    app:layout_constraintTop_toTopOf="@id/tvActiveSt1"/>
                <TextView
                    android:id="@+id/tvActiveAbsent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="부재중"
                    android:textSize="13sp"
                    app:layout_constraintTop_toTopOf="@id/circularProgress"
                    app:layout_constraintBottom_toBottomOf="@id/circularProgress"
                    app:layout_constraintStart_toEndOf="@id/circularProgress" />
                <ImageView
                    android:id="@+id/btnToggleActivity"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:paddingLeft="18dp"
                    android:paddingBottom="18dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/arrow_down"
                    app:layout_constraintTop_toBottomOf="@id/circularProgress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/circularProgress"
                    app:layout_constraintBottom_toBottomOf="@id/circularProgress"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/toggleActivityView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/activityView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:weekDayTextAppearance="@android:color/black"
                    android:dateTextAppearance="@android:color/black"
                    android:selectedDateVerticalBar="@android:color/holo_blue_dark"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tvActivityTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="일일 시간별 활동량"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/calendarView"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tvActivityPct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 : 75%"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/tvActivityTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvActivityTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <View
                    android:id="@+id/activityIcon1"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:background="@android:color/holo_red_dark"
                    app:layout_constraintTop_toBottomOf="@id/tvActivityTitle"
                    app:layout_constraintStart_toStartOf="@id/tvActivityTitle"/>
                <TextView
                    android:id="@+id/activityLegend1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="약한 활동적"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@id/activityIcon1"
                    app:layout_constraintTop_toTopOf="@id/activityIcon1"
                    app:layout_constraintBottom_toBottomOf="@id/activityIcon1"/>
                <View
                    android:id="@+id/activityIcon2"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginLeft="7dp"
                    android:background="@android:color/holo_blue_dark"
                    app:layout_constraintTop_toTopOf="@id/activityIcon1"
                    app:layout_constraintBottom_toBottomOf="@id/activityIcon1"
                    app:layout_constraintStart_toEndOf="@id/activityLegend1"/>
                <TextView
                    android:id="@+id/activityLegend2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="일반 활동적"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@id/activityIcon2"
                    app:layout_constraintTop_toTopOf="@id/activityIcon2"
                    app:layout_constraintBottom_toBottomOf="@id/activityIcon2"/>
                <View
                    android:id="@+id/activityIcon3"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginLeft="7dp"
                    android:background="@android:color/holo_green_light"
                    app:layout_constraintTop_toTopOf="@id/activityIcon2"
                    app:layout_constraintBottom_toBottomOf="@id/activityIcon2"
                    app:layout_constraintStart_toEndOf="@id/activityLegend2"/>
                <TextView
                    android:id="@+id/activityLegend3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="매우 활동적"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@id/activityIcon3"
                    app:layout_constraintTop_toTopOf="@id/activityIcon3"
                    app:layout_constraintBottom_toBottomOf="@id/activityIcon3"/>
                <TextView
                    android:id="@+id/activityChartValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오전 12시 : 0%"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/activityLegend1"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/activityChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintTop_toBottomOf="@id/activityChartValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <TextView
                    android:id="@+id/tvTempTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="실내 온도"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/activityChart"
                    app:layout_constraintStart_toStartOf="parent"/>
                <TextView
                    android:id="@+id/tvTempPct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="현재 : 30°C"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="@id/tvTempTitle"
                    app:layout_constraintBottom_toBottomOf="@id/tvTempTitle"
                    app:layout_constraintEnd_toEndOf="parent"/>
                <View
                    android:id="@+id/tempIcon1"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginTop="15dp"
                    android:background="@android:color/holo_red_dark"
                    app:layout_constraintTop_toBottomOf="@id/tvTempTitle"
                    app:layout_constraintStart_toStartOf="@id/tvTempTitle"/>
                <TextView
                    android:id="@+id/tempLegend1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="추움(18°C 이하)"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@id/tempIcon1"
                    app:layout_constraintTop_toTopOf="@id/tempIcon1"
                    app:layout_constraintBottom_toBottomOf="@id/tempIcon1"/>
                <View
                    android:id="@+id/tempIcon2"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginLeft="7dp"
                    android:background="@android:color/holo_blue_dark"
                    app:layout_constraintTop_toTopOf="@id/tempIcon1"
                    app:layout_constraintBottom_toBottomOf="@id/tempIcon1"
                    app:layout_constraintStart_toEndOf="@id/tempLegend1"/>
                <TextView
                    android:id="@+id/tempLegend2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="적정(19 ~ 26°C)"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@id/tempIcon2"
                    app:layout_constraintTop_toTopOf="@id/tempIcon2"
                    app:layout_constraintBottom_toBottomOf="@id/tempIcon2"/>
                <View
                    android:id="@+id/tempIcon3"
                    android:layout_width="9dp"
                    android:layout_height="9dp"
                    android:layout_marginLeft="7dp"
                    android:background="@android:color/holo_green_light"
                    app:layout_constraintTop_toTopOf="@id/tempIcon2"
                    app:layout_constraintBottom_toBottomOf="@id/tempIcon2"
                    app:layout_constraintStart_toEndOf="@id/tempLegend2"/>
                <TextView
                    android:id="@+id/tempLegend3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="더움(27°C 이상)"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@id/tempIcon3"
                    app:layout_constraintTop_toTopOf="@id/tempIcon3"
                    app:layout_constraintBottom_toBottomOf="@id/tempIcon3"/>
                <TextView
                    android:id="@+id/tempChartValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="오전 12시 : 30°C"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintTop_toBottomOf="@id/tempLegend1"
                    app:layout_constraintStart_toStartOf="parent"/>
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/tempChart"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:layout_constraintTop_toBottomOf="@id/tempChartValue"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
