<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#174176">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="21dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <TextView
            android:id="@+id/tvHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingBottom="1dp"
            android:gravity="center"
            android:text="나의 홈"
            android:textSize="16dp"
            android:textColor="@android:color/white"
            android:fontFamily="@font/noto_sans_kr_bold"
            android:includeFontPadding="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="@id/tvHome"
            app:layout_constraintStart_toEndOf="@id/tvHome"
            app:layout_constraintBottom_toBottomOf="@id/tvHome"
            app:tint="@android:color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="23dp"
        app:layout_constraintTop_toTopOf="@id/btnHome"
        app:layout_constraintBottom_toBottomOf="@id/btnHome"
        app:layout_constraintEnd_toStartOf="@id/btnSetting">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_bell"
            app:tint="#C5CBE3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnSetting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toTopOf="@id/btnHome"
        app:layout_constraintBottom_toBottomOf="@id/btnHome"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="17dp"
            android:layout_height="wrap_content"
            android:src="@drawable/menu_dot"
            app:tint="#C5CBE3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnAlarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/calendarFragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnAlarm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnExpand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_arrow_down"
            android:layout_marginTop="2dp"
            app:tint="@android:color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toBottomOf="@id/btnExpand"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0F2B4E"
                android:paddingBottom="35dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnFallDetection"
                    android:layout_width="110dp"
                    android:layout_height="145dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnActivityDetection">
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="낙상감지"
                        android:textSize="15dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                        android:id="@+id/iv1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:src="@drawable/img1"
                        app:layout_constraintTop_toBottomOf="@id/tv1"
                        app:layout_constraintBottom_toTopOf="@id/label1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/label1"
                        android:layout_width="90dp"
                        android:layout_height="27dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2E5F9B"
                        app:cardCornerRadius="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/tvStatus1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:text="정상"
                            android:textSize="14dp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:includeFontPadding="false"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnActivityDetection"
                    android:layout_width="110dp"
                    android:layout_height="145dp"
                    app:layout_constraintTop_toTopOf="@id/btnFallDetection"
                    app:layout_constraintStart_toEndOf="@id/btnFallDetection"
                    app:layout_constraintEnd_toStartOf="@id/btnRespirationDetection">
                    <TextView
                        android:id="@+id/tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="활동량 감지"
                        android:textSize="15dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                        android:id="@+id/iv2"
                        android:layout_width="93dp"
                        android:layout_height="93dp"
                        android:src="@drawable/img2"
                        app:layout_constraintTop_toBottomOf="@id/tv2"
                        app:layout_constraintBottom_toTopOf="@id/label2"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/label2"
                        android:layout_width="90dp"
                        android:layout_height="27dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2E5F9B"
                        app:cardCornerRadius="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/tvStatus2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:text="정상"
                            android:textSize="14dp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:includeFontPadding="false"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnRespirationDetection"
                    android:layout_width="110dp"
                    android:layout_height="145dp"
                    app:layout_constraintTop_toTopOf="@id/btnFallDetection"
                    app:layout_constraintStart_toEndOf="@id/btnActivityDetection"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="호흡감지"
                        android:textSize="15dp"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                        android:id="@+id/iv3"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:src="@drawable/img3"
                        app:layout_constraintTop_toBottomOf="@id/tv3"
                        app:layout_constraintBottom_toTopOf="@id/label3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/label3"
                        android:layout_width="90dp"
                        android:layout_height="27dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2E5F9B"
                        app:cardCornerRadius="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/tvStatus3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:text="정상"
                            android:textSize="14dp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:includeFontPadding="false"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnLifePatternDetection"
                    android:layout_width="110dp"
                    android:layout_height="145dp"
                    android:layout_marginTop="27dp"
                    app:layout_constraintTop_toBottomOf="@id/btnFallDetection"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnAccessPatternDetection">
                    <TextView
                        android:id="@+id/tv5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="생활패턴"
                        android:textSize="15dp"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:textColor="@android:color/white"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                        android:id="@+id/iv5"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/img5"
                        app:layout_constraintTop_toBottomOf="@id/tv5"
                        app:layout_constraintBottom_toTopOf="@id/label5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/label5"
                        android:layout_width="90dp"
                        android:layout_height="27dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2E5F9B"
                        app:cardCornerRadius="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/tvStatus5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:text="정상"
                            android:textSize="14dp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:includeFontPadding="false"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnAccessPatternDetection"
                    android:layout_width="110dp"
                    android:layout_height="145dp"
                    app:layout_constraintTop_toTopOf="@id/btnLifePatternDetection"
                    app:layout_constraintStart_toEndOf="@id/btnLifePatternDetection"
                    app:layout_constraintEnd_toStartOf="@id/btnNighttimeDetection">
                    <TextView
                        android:id="@+id/tv6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출입패턴"
                        android:textSize="15dp"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:textColor="@android:color/white"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                        android:id="@+id/iv6"
                        android:layout_width="83dp"
                        android:layout_height="83dp"
                        android:src="@drawable/img6"
                        app:layout_constraintTop_toBottomOf="@id/tv6"
                        app:layout_constraintBottom_toTopOf="@id/label6"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/label6"
                        android:layout_width="90dp"
                        android:layout_height="27dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2E5F9B"
                        app:cardCornerRadius="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/tvStatus6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:text="정상"
                            android:textSize="14dp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:includeFontPadding="false"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnNighttimeDetection"
                    android:layout_width="110dp"
                    android:layout_height="145dp"
                    app:layout_constraintTop_toTopOf="@id/btnAccessPatternDetection"
                    app:layout_constraintStart_toEndOf="@id/btnAccessPatternDetection"
                    app:layout_constraintEnd_toEndOf="parent">
                    <TextView
                        android:id="@+id/tv7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="야간활동\n이상감지"
                        android:textSize="15dp"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:textColor="@android:color/white"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                        android:id="@+id/iv7"
                        android:layout_width="75dp"
                        android:layout_height="75dp"
                        android:src="@drawable/img7"
                        app:layout_constraintTop_toBottomOf="@id/tv7"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/label7"
                        android:layout_width="90dp"
                        android:layout_height="27dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2E5F9B"
                        app:cardCornerRadius="60dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">
                        <TextView
                            android:id="@+id/tvStatus7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="1dp"
                            android:gravity="center"
                            android:text="정상"
                            android:textSize="14dp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/noto_sans_kr_regular"
                            android:includeFontPadding="false"/>
                    </androidx.cardview.widget.CardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btnCall"
                    android:layout_width="110dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="27dp"
                    app:layout_constraintTop_toBottomOf="@id/btnLifePatternDetection"
                    app:layout_constraintStart_toStartOf="@id/btnLifePatternDetection"
                    app:layout_constraintEnd_toEndOf="@id/btnLifePatternDetection">
                    <TextView
                        android:id="@+id/tv8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="구조요청\n자동연결"
                        android:textSize="15dp"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:textColor="@android:color/white"
                        android:includeFontPadding="false"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>
                    <ImageView
                        android:id="@+id/iv8"
                        android:layout_width="77dp"
                        android:layout_height="77dp"
                        android:src="@drawable/img8"
                        android:layout_marginTop="2dp"
                        app:layout_constraintTop_toBottomOf="@id/tv8"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:tint="#FF9800" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>