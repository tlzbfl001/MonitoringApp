<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F9">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingLeft="20dp"
        android:text="리포트"
        android:textSize="18dp"
        android:textColor="@android:color/black"
        android:fontFamily="@font/noto_sans_kr_regular"
        android:includeFontPadding="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnHeartRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_12_grey"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnRespiratoryRate">
        <ImageView
            android:id="@+id/ivHeartRate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/heart_rate"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv1"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="심박수"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/ivHeartRate"
            app:layout_constraintStart_toStartOf="@id/ivHeartRate"
            app:layout_constraintEnd_toEndOf="@id/ivHeartRate"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnRespiratoryRate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_12_grey"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/btnHeartRate"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/ivRespiratoryRate"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/respiratory"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv2"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="호흡 수"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/ivRespiratoryRate"
            app:layout_constraintStart_toStartOf="@id/ivRespiratoryRate"
            app:layout_constraintEnd_toEndOf="@id/ivRespiratoryRate"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnOxygenSaturation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_12_grey"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/btnHeartRate"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnFall">
        <ImageView
            android:id="@+id/ivOxygenSaturation"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/oxygen_saturation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv3"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="산소포화도"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/ivOxygenSaturation"
            app:layout_constraintStart_toStartOf="@id/ivOxygenSaturation"
            app:layout_constraintEnd_toEndOf="@id/ivOxygenSaturation"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnFall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rec_12_grey"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        app:layout_constraintTop_toTopOf="@id/btnOxygenSaturation"
        app:layout_constraintBottom_toBottomOf="@id/btnOxygenSaturation"
        app:layout_constraintStart_toEndOf="@id/btnOxygenSaturation"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/ivFall"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:src="@drawable/fall"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv4"
            app:layout_constraintVertical_chainStyle="packed"/>
        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="낙상 횟수"
            android:textSize="16dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/noto_sans_kr_regular"
            android:includeFontPadding="false"
            app:layout_constraintTop_toBottomOf="@id/ivFall"
            app:layout_constraintStart_toStartOf="@id/ivFall"
            app:layout_constraintEnd_toEndOf="@id/ivFall"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>