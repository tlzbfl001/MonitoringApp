<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Teltron" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Teltron" parent="Base.Theme.Teltron" />

    <style name="Theme.Teltron.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0C223E</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Teltron</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="BottomNavTextStyle" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
</resources>