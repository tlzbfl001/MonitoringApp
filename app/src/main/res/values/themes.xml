<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Teltron" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Teltron" parent="Base.Theme.Teltron" />

    <style name="Theme.Teltron.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#0C223E</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Teltron</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lineHeight">10sp</item>
    </style>

    <style name="MonthDayHeader">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#B0B0B0</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Shape12dp">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="WeekDayCell">
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">6dp</item>
    </style>

    <style name="DayHeaderText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#B0C4DE</item>
        <item name="android:gravity">center</item>
    </style>

</resources>