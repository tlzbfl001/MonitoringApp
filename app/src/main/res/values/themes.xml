<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Teltron" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Teltron" parent="Base.Theme.Teltron" />

    <style name="Theme.Teltron.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">#304FFE</item>
        <item name="windowSplashScreenAnimatedIcon">@android:color/transparent</item>
        <item name="postSplashScreenTheme">@style/Theme.Teltron</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10.5sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CircleImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CalendarDialog" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

    <style name="PlainButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="elevation">0dp</item>
    </style>
</resources>