<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Teltron" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="Theme.Teltron" parent="Base.Theme.Teltron" />

    <style name="Theme.Teltron.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="postSplashScreenTheme">@style/Theme.Teltron</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/black</item>
        <item name="android:windowMinWidthMajor">97%</item>
        <item name="android:windowMinWidthMinor">97%</item>
    </style>

    <style name="BottomNavText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CustomCalendarDay" parent="TextAppearance.MaterialCalendarWidget.Date">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>